<% semantic_form_for @region do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :provider, :hint => 'Choose an existing Provider' %>
    <%= f.input :name, :hint => 'API name of the Region, for example, us-east-1' %>
    <%= f.input :short_name, :hint => 'Short name of the Region, for example, US - N. Virginia' %>
    <%= f.input :description,
      :input_html => { :class => 'autogrow', :warp => 'soft', :size => '40x2' },
      :required => false
    %>
    <%= f.input :endpoint_url, :hint => 'End point URL, for example, https://ec2.us-east-1.amazonaws.com' %>
  <% end %>
  <% f.buttons do %>
    <%= f.submit %>
    <%= submit_tag 'Cancel', :name => 'cancel_button' %>
  <% end %>
<% end %>