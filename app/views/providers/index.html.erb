<% subtitle 'Available Cloud Providers' %>

<h1><%= link_to 'Admin Controls', admin_controls_path %> / Available Cloud Providers</h1>
<br/>

<table>
  <tr>
    <th>Name</th>
    <th>Long name</th>
    <th>Main documentation url</th>
    <th>State</th>
    <th>Adapter class</th>
  </tr>

<% for provider in @providers %>
  <tr>
    <td><%= link_to h(provider.name), provider %></td>
    <td><%=h provider.long_name %></td>
    <td><%=h provider.main_documentation_url %></td>
    <td class="<%=h provider.state %>"><%=h provider.state %></td>
    <td><%=h provider.adapter_class %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Cloud Provider', new_provider_path %>
