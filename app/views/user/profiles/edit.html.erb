<h1>Edit your account [<%= h current_user.login %>]</h1>
<br />
<%#= link_to_current_user :content_method => :login %>
<%= error_messages_for :user %>
  
<% form_for :user, :url => user_profile_url(@user), :html => { :method => :put } do |f| %>
  <%= render :partial => "user/profiles/edit_profile", :locals => { :f => f } %> 
  <%= f.submit 'Save' %>
  <%= f.submit 'Cancel', :name => 'cancel_button' %>
<% end %>


